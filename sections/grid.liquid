
<h1>Tisso Vison in the wild</h1>

<div class="product-grid">
  {% for block in section.blocks %}
    <div>
      <img class="gird-image" src="{{ block.settings.grid-image | file_img_url: 'master' }}" width="50px" height="50px">
      <div class="icon-popup">
        {{- 'icon-popup.svg' | inline_asset_content -}}
      </div>
    </div>
    <div class="product-popup">
      <span class="popup-window" id="productPopup">
        <div class="popup-exit">
          {{- 'icon-exit.svg' | inline_asset_content -}}
        </div>
        {% for product in product %}
          <div class="popup-images">
            <div class="popup-image">
              <img src="{{ product.featured_image | image_url }}" width="50px" height="50px">
            </div>
            <div class="product-info">
              <span class="product-title">
                {{ product.title }}
              </span>
              <span class="product-price">
                {{ product.price | money }}
              </span>
              <span class="product-description">
                {{ product.description }}
              </span>
            </div>
          </div>
          {% form 'product', product %}
            <div class="product-variants">
              <select name="id">
                {% for variant in product.variants %}
                  <option value="{{ variant.id }}">
                    {{ variant.title }}
                  </option>
                {% endfor %}
              </select>
              <button>
                
              </button>
            </div>
          {% endform %}
        {% endfor %}
      </span>
    </div>
  {% endfor %}
  
</div>

{% schema %}
  {
    "name": "Grid",
    "settings": [],
    "presets": [
      {
        "name": "grid"
      }
    ],
    "blocks": [
      {
        "name": "Grid title",
        "type": "text",
        "settings": [
          {
            "type": "text",
            "id": "grid-title",
            "label": "Grid title"
          }
        ]
      },
      {
        "name": "Grid image",
        "type": "image_picker",
        "settings": [
          {
            "type": "image_picker",
            "id": "grid-image",
            "label": "Grid image"
          }
        ]
      }
    ]
  }
{% endschema %}