    "name": "Banner",
    "settings": [],
    "presets": [
      {
        "name": "banner"
      }
    ],
    "blocks": [
      {
        "name": "Banner section 1",
        "type": "text",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "banner-logo",
            "label": "Banner logo"
          },
          {
            "type": "text",
            "id": "banner-title",
            "label": "Banner title"
          },
          {
            "type": "text",
            "id": "banner-giftbutton-text",
            "label": "Gift Button text"
          },
          {
            "type": "url",
            "id": "banner-giftbutton-url",
            "label": "Gift Button URL"
          },
          {
            "type": "text",
            "id": "banner-shoptbutton-text",
            "label": "Shop Button text"
          },
          {
            "type": "url",
            "id": "banner-shopbutton-url",
            "label": "Shop Button URL"
          }
          
        ]
      }
    ]
  }
{% endschema %}