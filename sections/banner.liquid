<div class="banner">
  <!-- first section of the banner  -->
  {% for block in section.blocks %}
    <div class="banner-section-1">
      <div class="banner-logo">
        <div class="mobile-dropdown">
          <button class="dropbtn">
            <span class="dropbtn-icon">
              {{- 'mobile-dropdown.svg' | inline_asset_content -}}
            </span>
          </button>
          <div class="dropdown-content">
            <div class="dropdown-exit">
              {{- 'icon-exit.svg' | inline_asset_content -}}
            </div>
            <div class="dropdown-item">
              <div class="banner-title">
                <h1 class="banner-title-text">
                  {{ block.settings.banner-text }}
                </h1>
              </div>
            </div>
            <div class="dropdown-item">
              <button class="button-text">
                {{ block.settings.banner-button-text }}
                <span class="arrow-svg-wrapper">
                  {{- 'button-arrow.svg' | inline_asset_content -}}
                </span>
              </button>
            </div>
          </div>
        </div>
        <h1 class="banner-logo-text">
          {{ block.settings.banner-text }}
        </h1>
      </div>
      <div class="banner-title">
        <h1 class="banner-title-text">
          {{ block.settings.banner-text }}
        </h1>
      </div>
      <div class="banner-button">
        <button class="button-text">
          {{ block.settings.banner-button-text }}
          <span class="arrow-svg-wrapper">
            {{- 'button-arrow.svg' | inline_asset_content -}}
          </span>
        </button>
      </div>
    </div>

    <!-- second section of the banner with full image  -->
    <span class="banner-image">
      {{ 'image-banner.svg' | asset_url }}
    </span>
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Banner",
    "settings": [],
    "presets": [
      {
        "name": "banner"
      }
    ],
    "blocks": [
      {
        "name": "Text",
        "type": "text",
        "limit": 4,
        "settings": [
          {
            "type": "text",
            "id": "banner-text",
            "label": "Banner text"
          }
        ]
      },
      {
        "name": "Button",
        "type": "button",
        "limit": 2,
        "settings": [
          {
            "type": "text",
            "id": "banner-button-text",
            "label": "Button text"
          },
          {
            "type": "url",
            "id": "banner-button-url",
            "label": "Button URL"
          }
        ]
      },
      {
        "name": "Banner paragraph",
        "type": "textarea",
        "limit": 1,
        "settings": [
          {
            "type": "textarea",
            "id": "banner-paragraph-text",
            "label": "Paragraph text"
          }
        ]
      },
      {
        "name": "Banner image",
        "type": "image",
        "limit": 2
      }
    ],
  }
{% endschema %}